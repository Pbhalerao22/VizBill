@model VizBill.MasterDbContext.TblInnoShopMaster

@{
    ViewData["Title"] = "Create Shop";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}

<style>
    /* ===================================
           POS THEME V1 - ORANGE (Create Shop)
           Mobile First | Centered Layout
        =================================== */
    :root {
        --pos-orange: #ff6b00;
        --pos-bg: #f5f6f8;
        --pos-border: #e9ecef;
        --text-muted: #6c757d;
    }

    body {
        background: var(--pos-bg);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    /* Center Wrapper (NO CARD – as per your design system) */
    .page-wrapper {
        max-width: 520px;
        margin: 0 auto;
        padding: 24px 16px 100px;
    }

    /* Header */
    .page-title {
        font-size: 26px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 4px;
        color: #212529;
    }

    .page-subtitle {
        text-align: center;
        color: var(--text-muted);
        margin-bottom: 24px;
        font-size: 14px;
    }

    /* Form Group */
    .form-group-pos {
        margin-bottom: 18px;
    }

    .form-label-pos {
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 6px;
        display: block;
    }

    .form-control-pos {
        width: 100%;
        border-radius: 12px;
        border: 1px solid var(--pos-border);
        padding: 14px 16px;
        font-size: 15px;
        background: #fff;
        transition: 0.2s ease;
    }

        .form-control-pos:focus {
            border-color: var(--pos-orange);
            box-shadow: 0 0 0 2px rgba(255,107,0,0.1);
            outline: none;
        }

    /* File Upload */
    .file-input {
        padding: 10px;
    }

    .logo-preview {
        margin-top: 12px;
        text-align: center;
    }

        .logo-preview img {
            max-height: 140px;
            border-radius: 12px;
            border: 1px solid var(--pos-border);
            padding: 6px;
            background: #fff;
        }

    /* Primary Button (POS Orange) */
    .btn-pos {
        width: 100%;
        background: var(--pos-orange);
        color: #fff;
        border: none;
        padding: 16px;
        border-radius: 14px;
        font-weight: 600;
        font-size: 16px;
        margin-top: 10px;
        transition: 0.2s ease;
    }

        .btn-pos:hover {
            background: #e65c00;
        }

    /* Floating Back Button (same as FAB style) */
    .fab-btn {
        position: fixed;
        bottom: 24px;
        right: 24px;
        background: var(--pos-orange);
        color: #fff;
        border-radius: 50px;
        padding: 14px 22px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    }

        .fab-btn:hover {
            color: #fff;
            background: #e65c00;
            text-decoration: none;
        }

    /* Validation */
    .text-danger {
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }
</style>

<div class="page-wrapper">

    <!-- Title -->
    <div class="page-title">Create Shop</div>
    <div class="page-subtitle">Add your new shop details</div>

    <form asp-action="Create" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Owner -->
        <div class="form-group-pos">
            <label asp-for="OwnerUserId" class="form-label-pos">Owner</label>
            <select asp-for="OwnerUserId" class="form-control-pos">
                @foreach (var item in ViewBag.OwnerDrop)
                {
                    <option value="@item.UserId">@item.Name</option>
                }
            </select>
        </div>

        <!-- Shop Name -->
        <div class="form-group-pos">
            <label asp-for="ShopName" class="form-label-pos">Shop Name</label>
            <input asp-for="ShopName" class="form-control-pos" placeholder="e.g. Raju Tea Corner" />
            <span asp-validation-for="ShopName" class="text-danger"></span>
        </div>

        <!-- Category -->
        <div class="form-group-pos">
            <label asp-for="ShopCategory" class="form-label-pos">Shop Category</label>
            <input asp-for="ShopCategory" class="form-control-pos" placeholder="e.g. Tea Stall / Fast Food" />
            <span asp-validation-for="ShopCategory" class="text-danger"></span>
        </div>

        <!-- WhatsApp -->
        <div class="form-group-pos">
            <label asp-for="WhatsappNumber" class="form-label-pos">WhatsApp Number</label>
            <input asp-for="WhatsappNumber" class="form-control-pos" placeholder="e.g. 9876543210" />
            <span asp-validation-for="WhatsappNumber" class="text-danger"></span>
        </div>

        <!-- Advertisement Message -->
        <div class="form-group-pos">
            <label asp-for="AdvertisementMsg" class="form-label-pos">Advertisement Message</label>
            <input asp-for="AdvertisementMsg" class="form-control-pos" placeholder="Special offers, etc." />
            <span asp-validation-for="AdvertisementMsg" class="text-danger"></span>
        </div>

        <!-- Logo Upload -->
        <div class="form-group-pos">
            <label class="form-label-pos">Company Logo</label>
            <input type="file" name="imageFile"
                   class="form-control-pos file-input"
                   accept="image/*"
                   onchange="previewImage(event)" />
        </div>

        <!-- Image Preview -->
        <div class="logo-preview">
            <img id="imagePreview" src="#" alt="Preview" style="display:none;" />
        </div>

        <!-- Submit -->
        <button type="submit" class="btn-pos">
            Create Shop
        </button>
    </form>

</div>

<!-- Floating Back Button (POS Style) -->
<a class="fab-btn" href="/Main/ShopSelection">
    ← Back
</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById('imagePreview');
                output.src = reader.result;
                output.style.display = "block";
            };
            reader.readAsDataURL(file);
        }
    </script>
}