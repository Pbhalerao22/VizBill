@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f4f6f9;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }

        .login-wrapper {
            width: 100%;
            max-width: 420px;
            background: #ffffff;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        }

        .logo-img {
            width: 80px;
            height: 80px;
            object-fit: contain;
            margin-bottom: 20px;
        }

        h4 {
            font-weight: 600;
            margin-bottom: 25px;
        }

        .form-control {
            height: 50px;
            border-radius: 10px;
        }

        .btn-primary {
            height: 50px;
            border-radius: 10px;
            background-color: #1f2937;
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #111827;
            }

        .divider {
            text-align: center;
            margin: 20px 0;
            font-size: 13px;
            color: #6b7280;
        }

        .google-btn {
            height: 50px;
            border-radius: 10px;
            border: 1px solid #d1d5db;
            background: #ffffff;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            transition: 0.2s ease;
        }

            .google-btn:hover {
                background: #f9fafb;
            }

        .small-links {
            font-size: 13px;
            margin-top: 12px;
        }

            .small-links a {
                text-decoration: none;
                color: #1f2937;
            }

                .small-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>

    <div class="login-wrapper text-center">

        <img src="~/Img/logo.jpg" class="logo-img" />

        <h4>Sign in to your account</h4>

        <form method="post" asp-action="Login">

            <div class="mb-3">
                <input type="email" name="Email" class="form-control" placeholder="Email address" required />
            </div>

            <div class="mb-3">
                <input type="password" name="Password" class="form-control" placeholder="Password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Sign In
            </button>
        </form>

        <div class="small-links d-flex justify-content-between">
            <a href="/Auth/ForgotPassword">Forgot password?</a>
            <a href="/Auth/Register">Create account</a>
        </div>

        <div class="divider">OR</div>

        <a href="/Auth/LoginWithGoogle" class="text-decoration-none">
            <div class="google-btn w-100">
                <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" width="20" />
                Continue with Google
            </div>
        </a>

    </div>

</body>
</html>