    <style>
        /* ============================
           SMART BILLING POS UI
           Mobile First + Web Friendly
        ============================ */

        :root {
            --pos-bg: #f6f7fb;
            --card-bg: #ffffff;
            --border-soft: #e9ecef;
            --text-muted: #6c757d;
            --purple-start: #6a11cb;
            --purple-end: #8e2de2;
        }

        body {
            background-color: var(--pos-bg);
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }

        /* Container max width like web app */
        .dashboard-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            padding: 12px;
        }

        /* Top Bar */
        .topbar {
            background: #fff;
            border-radius: 12px;
            padding: 10px 14px;
            border: 1px solid var(--border-soft);
        }

        .shop-name {
            font-weight: 600;
            font-size: 15px;
        }

        .status-badge {
            font-size: 12px;
            background: #e6f7ed;
            color: #198754;
            border-radius: 20px;
            padding: 4px 10px;
            font-weight: 500;
        }

        /* Stat Cards */
        .stat-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 14px;
            border: 1px solid var(--border-soft);
            transition: 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
        }

        .stat-icon {
            font-size: 18px;
            margin-bottom: 6px;
        }

        .stat-value {
            font-size: 20px;
            font-weight: 700;
            line-height: 1.2;
        }

        .stat-label {
            font-size: 12px;
            color: var(--text-muted);
        }

        /* Free Trial Banner */
        .trial-banner {
            background: linear-gradient(90deg, var(--purple-start), var(--purple-end));
            border-radius: 14px;
            padding: 14px;
            color: #fff;
        }

        .trial-title {
            font-size: 14px;
            font-weight: 600;
        }

        .trial-sub {
            font-size: 12px;
            opacity: 0.9;
        }

        .upgrade-btn {
            background: #ffffff;
            color: #000;
            border-radius: 10px;
            font-weight: 600;
            font-size: 14px;
            border: none;
            padding: 10px;
        }

        /* Recent Transactions */
        .section-title {
            font-size: 14px;
            font-weight: 600;
            margin: 14px 0 8px;
        }

        .transaction-card {
            background: #fff;
            border-radius: 12px;
            padding: 12px 14px;
            border: 1px solid var(--border-soft);
            margin-bottom: 10px;
        }

        .txn-id {
            font-weight: 600;
            font-size: 13px;
        }

        .txn-time {
            font-size: 11px;
            color: var(--text-muted);
        }

        .txn-amount {
            font-weight: 700;
            font-size: 14px;
        }

        .payment-type {
            font-size: 11px;
            font-weight: 600;
        }

        .cash {
            color: #198754;
        }

        .upi {
            color: #0d6efd;
        }

        /* Responsive Tweaks */
        @@media (min-width: 768px) {
            .stat-value {
                font-size: 22px;
            }
        }
    </style>


<div class="dashboard-wrapper">

    <!-- Top Bar -->
    <div class="topbar d-flex justify-content-between align-items-center mb-3">
        <div class="dropdown">
            <a class="dropdown-toggle text-decoration-none text-dark shop-name" href="#" role="button" data-bs-toggle="dropdown">
                Raju Tea Corner
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Raju Tea Corner</a></li>
                <li><a class="dropdown-item" href="#">Second Shop</a></li>
            </ul>
        </div>

        <span class="status-badge">
            <i class="bi bi-wifi"></i> Online
        </span>
    </div>

    <!-- Stats Row -->
    <div class="row g-3">
        <div class="col-12 col-md-6">
            <div class="stat-card">
                <div class="stat-icon text-success">
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="stat-value">₹@ViewBag.TotalSales</div>
                @* <div class="stat-value">₹4,250</div> *@
                <div class="stat-label">Today's Sales</div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="stat-card">
                <div class="stat-icon text-warning">
                    <i class="bi bi-bag-check"></i>
                </div>
                @* <div class="stat-value">38</div> *@
                <div class="stat-value">@ViewBag.TotalOrders</div>
                <div class="stat-label">Total Orders</div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="stat-card">
                <div class="stat-icon text-success">
                    <i class="bi bi-cash-stack"></i>
                </div>
                @* <div class="stat-value">₹2,800</div> *@
                <div class="stat-value">₹@ViewBag.TotalAmtCash</div>
                <div class="stat-label">Cash</div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="stat-card">
                <div class="stat-icon text-primary">
                    <i class="bi bi-phone"></i>
                </div>
                <div class="stat-value">₹@ViewBag.TotalAmtUPI</div>
                @* <div class="stat-value">₹1,450</div> *@
                <div class="stat-label">UPI</div>
            </div>
        </div>
    </div>

    <!-- Free Trial Banner -->
    <div class="trial-banner mt-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <div class="trial-title">
                    <i class="bi bi-gem me-1"></i> Free Trial — 3 Days Left
                </div>
                <div class="trial-sub">
                    Upgrade to keep billing without interruption
                </div>
            </div>
        </div>
        <button class="upgrade-btn w-100 mt-3">
            Upgrade Plan
        </button>
    </div>

    <!-- Recent Transactions -->
    <div class="section-title">Recent Transactions</div>

    @foreach (var item in ViewBag.RecentTransaction)
    {
        <div class="transaction-card d-flex justify-content-between align-items-center">
            <div>
                <div class="txn-id">#@item.BillNumber</div>
                <div class="txn-time">@item.CreatedOn</div>
            </div>
            <div class="text-end">
                <div class="txn-amount">₹@item.TotalAmount</div>
                <div class="payment-type upi">@item.ModeName</div>
            </div>
        </div>
    }

