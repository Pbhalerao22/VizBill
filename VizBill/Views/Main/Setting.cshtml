<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<style>
    /* ===================================
           POS THEME V1 - ORANGE (Settings UI)
           (EXACT SAME STRUCTURE AS REPORTS)
        =================================== */
    :root {
        --pos-orange: #ff6b00;
        --pos-orange-light: #fff3eb;
        --pos-bg: #f5f6f8;
        --card-border: #e9ecef;
        --text-muted: #6c757d;
        --danger: #dc2626;
    }

    body {
        background: var(--pos-bg);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    .app-wrapper {
        max-width: 1100px;
        margin: auto;
        padding: 16px;
        padding-bottom: 40px;
    }

    /* Title */
    .page-title {
        font-size: 22px;
        font-weight: 700;
        margin-bottom: 16px;
    }

    /* Section Card (same as stat-card style) */
    .settings-card {
        background: #fff;
        border-radius: 14px;
        border: 1px solid var(--card-border);
        margin-bottom: 16px;
        overflow: hidden;
    }

    /* Section Header */
    .card-header-title {
        font-size: 13px;
        font-weight: 700;
        color: var(--text-muted);
        padding: 14px 16px 8px;
        letter-spacing: 0.5px;
    }

    /* List Item Row */
    .settings-item {
        padding: 14px 16px;
        border-top: 1px solid var(--card-border);
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        transition: 0.2s ease;
    }

        .settings-item:hover {
            background: var(--pos-orange-light);
        }

        .settings-item:first-of-type {
            border-top: none;
        }

    /* Left Content */
    .item-left {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .item-icon {
        font-size: 18px;
        color: #6b7280;
        width: 24px;
        text-align: center;
    }

    .item-title {
        font-weight: 600;
        font-size: 15px;
    }

    .item-sub {
        font-size: 13px;
        color: var(--text-muted);
        margin-top: 2px;
    }

    .item-highlight {
        color: var(--pos-orange);
        font-weight: 600;
    }

    /* Right Arrow */
    .item-arrow {
        font-size: 18px;
        color: #adb5bd;
    }

    /* Special Cards (Switch Shop / Logout) */
    .action-card {
        background: #fff;
        border-radius: 14px;
        border: 1px solid var(--card-border);
        padding: 16px;
        font-weight: 600;
        margin-bottom: 12px;
        cursor: pointer;
        transition: 0.2s ease;
    }

        .action-card:hover {
            background: var(--pos-orange-light);
        }

    .logout {
        color: var(--danger);
    }

    /* Subscription Badge Icon */
    .subscription-icon {
        background: #f3e8ff;
        color: #7c3aed;
        border-radius: 10px;
        padding: 8px 10px;
        font-size: 16px;
    }





    /* Align edit icon to top right of card */
    .settings-card {
        position: relative;
    }

    .edit-icon {
        position: absolute;
        top: 12px;
        right: 16px;
        font-size: 18px;
        color: var(--pos-orange);
        cursor: pointer;
    }

        .edit-icon:hover {
            color: #e65c00;
        }

    /* Move logo image to right side */
    .settings-item img {
        margin-left: auto;
    }

    /* Make logo row properly aligned */
    .settings-item .item-left {
        width: 100%;
    }

        .settings-item .item-left > div:last-child {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
</style>

<div class="app-wrapper">

    <!-- Page Title -->
    <div class="page-title">Settings</div>


    <!-- SHOP PROFILE -->
    <div class="settings-card">
        <div class="card-header-title">SHOP PROFILE</div>

        @foreach (var item in ViewBag.ShopDetails)
        {
            <a href="/Shopmasters/Edit?id=@item.ShopId"><i class="bi bi-pencil edit-icon" title="Edit"></i></a>

            <div class="settings-item">
                <div class="item-left">
                    <div class="item-icon">🏪</div>
                    <div>
                        <div class="item-title">Shop Name</div>
                        <div class="item-sub">@item.ShopName</div>
                    </div>
                </div>
                
            </div>

            <div class="settings-item">
                <div class="item-left">
                    <div class="item-icon">🖼️</div>
                    <div>
                        <div class="item-title">Logo</div>
                    </div>
                </div>

                @{
                    var base64 = Convert.ToBase64String(@item.CompanyLogo);
                    var imgSrc = $"data:image/png;base64,{base64}";
                    <img src="@imgSrc" alt="Profile Image"
                         class="rounded-circle border"
                         style="width:50px; height:50px; object-fit:cover;" />
                }

                
            </div>

            <div class="settings-item">
                <div class="item-left">
                    <div class="item-icon">📞</div>
                    <div>
                        <div class="item-title">WhatsApp Number</div>
                        <div class="item-sub">@item.WhatsappNumber</div>
                    </div>
                </div>
                
            </div>

            <div class="settings-item">
                <div class="item-left">
                    <div class="item-icon">💬</div>
                    <div>
                        <div class="item-title">Advertise Message</div>
                        <div class="item-sub">@item.AdvertisementMsg</div>
                    </div>
                </div>
               
            </div>
        }

      
    </div>

    <!-- SUBSCRIPTION -->
    <div class="settings-card">
        <div class="settings-item">
            <div class="item-left">
                <div class="subscription-icon">👑</div>
                <div>
                    <div class="item-title">Subscription</div>
                    <div class="item-sub">Free Trial — 3 Days Left</div>
                </div>
            </div>
            
        </div>
    </div>

    <!-- ACTIONS (same card style as reports list items) -->
    <div class="action-card">
        🔄 Switch Shop
    </div>

    <div class="action-card">
        ➕ Add New Shop
    </div>

    <div class="action-card logout">
        🚪 Logout
    </div>

</div>



