<style>
    /* ===================================
           POS THEME V1 - ORANGE (Settings UI)
           (EXACT SAME STRUCTURE AS REPORTS)
        =================================== */
    :root {
        --pos-orange: #ff6b00;
        --pos-orange-light: #fff3eb;
        --pos-bg: #f5f6f8;
        --card-border: #e9ecef;
        --text-muted: #6c757d;
        --danger: #dc2626;
    }

    body {
        background: var(--pos-bg);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    .app-wrapper {
        max-width: 1100px;
        margin: auto;
        padding: 16px;
        padding-bottom: 40px;
    }

    /* Title */
    .page-title {
        font-size: 22px;
        font-weight: 700;
        margin-bottom: 16px;
    }

    /* Section Card (same as stat-card style) */
    .settings-card {
        background: #fff;
        border-radius: 14px;
        border: 1px solid var(--card-border);
        margin-bottom: 16px;
        overflow: hidden;
    }

    /* Section Header */
    .card-header-title {
        font-size: 13px;
        font-weight: 700;
        color: var(--text-muted);
        padding: 14px 16px 8px;
        letter-spacing: 0.5px;
    }

    /* List Item Row */
    .settings-item {
        padding: 14px 16px;
        border-top: 1px solid var(--card-border);
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        transition: 0.2s ease;
    }

        .settings-item:hover {
            background: var(--pos-orange-light);
        }

        .settings-item:first-of-type {
            border-top: none;
        }

    /* Left Content */
    .item-left {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .item-icon {
        font-size: 18px;
        color: #6b7280;
        width: 24px;
        text-align: center;
    }

    .item-title {
        font-weight: 600;
        font-size: 15px;
    }

    .item-sub {
        font-size: 13px;
        color: var(--text-muted);
        margin-top: 2px;
    }

    .item-highlight {
        color: var(--pos-orange);
        font-weight: 600;
    }

    /* Right Arrow */
    .item-arrow {
        font-size: 18px;
        color: #adb5bd;
    }

    /* Special Cards (Switch Shop / Logout) */
    .action-card {
        background: #fff;
        border-radius: 14px;
        border: 1px solid var(--card-border);
        padding: 16px;
        font-weight: 600;
        margin-bottom: 12px;
        cursor: pointer;
        transition: 0.2s ease;
    }

        .action-card:hover {
            background: var(--pos-orange-light);
        }

    .logout {
        color: var(--danger);
    }

    /* Subscription Badge Icon */
    .subscription-icon {
        background: #f3e8ff;
        color: #7c3aed;
        border-radius: 10px;
        padding: 8px 10px;
        font-size: 16px;
    }
</style>

