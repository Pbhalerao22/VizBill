<style>
    /* ===================================
           POS THEME V1 - ORANGE (Mobile First)
        =================================== */
    :root {
        --pos-orange: #ff6b00;
        --pos-orange-light: #fff3eb;
        --pos-bg: #f5f6f8;
        --card-border: #e9ecef;
        --text-muted: #6c757d;
    }

    body {
        background: var(--pos-bg);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    .app-wrapper {
        max-width: 1100px;
        margin: auto;
        padding: 12px;
        padding-bottom: 100px;
    }

    /* Topbar */
    .topbar {
        background: #fff;
        border-radius: 12px;
        padding: 12px 16px;
        border: 1px solid var(--card-border);
        margin-bottom: 14px;
    }

    .shop-name {
        font-weight: 600;
        font-size: 16px;
    }

    .online-badge {
        background: #e6f7ed;
        color: #198754;
        font-size: 12px;
        padding: 5px 12px;
        border-radius: 20px;
        font-weight: 500;
    }

    /* Category Chips */
    .category-scroll {
        overflow-x: auto;
        white-space: nowrap;
        margin-bottom: 16px;
    }

    .category-chip {
        display: inline-block;
        border: none;
        background: #fff;
        padding: 10px 18px;
        border-radius: 25px;
        font-weight: 500;
        margin-right: 8px;
        border: 1px solid var(--card-border);
        transition: 0.2s ease;
    }

        .category-chip.active {
            background: var(--pos-orange);
            color: #fff;
            border-color: var(--pos-orange);
        }

        .category-chip:hover {
            background: var(--pos-orange-light);
        }

    /* Item List Card */
    .item-row {
        background: #fff;
        border-radius: 14px;
        padding: 16px 18px;
        border: 1px solid var(--card-border);
        margin-bottom: 12px;
        transition: 0.2s ease;
    }

        .item-row:hover {
            box-shadow: 0 4px 14px rgba(0,0,0,0.05);
        }

    .item-title {
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 6px;
    }

    .item-meta {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .category-badge {
        font-size: 11px;
        padding: 4px 10px;
        border-radius: 20px;
        font-weight: 600;
    }

    .badge-drinks {
        background: #e7f0ff;
        color: #0d6efd;
    }

    .badge-snacks {
        background: #fff1e6;
        color: #fd7e14;
    }

    .badge-fastfood {
        background: #e8f8f0;
        color: #198754;
    }

    .item-price {
        color: var(--pos-orange);
        font-weight: 700;
        font-size: 15px;
    }

    .action-icons i {
        font-size: 18px;
        margin-left: 16px;
        cursor: pointer;
    }

    .edit-icon {
        color: #6c757d;
    }

    .delete-icon {
        color: #dc3545;
    }

    /* Floating Add Button */
    .fab {
        position: fixed;
        bottom: 25px;
        right: 25px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: var(--pos-orange);
        color: #fff;
        border: none;
        font-size: 28px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .fab:hover {
            background: #e65c00;
        }

    /* Responsive */
    @@media (max-width: 576px) {
        .item-title {
            font-size: 15px;
        }
    }




    /* FAB (already using your theme) */
    .fab {
        position: fixed;
        bottom: 25px;
        right: 25px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: #ff6b00;
        color: #fff;
        border: none;
        font-size: 26px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.2);
        z-index: 1050;
    }

    /* FULL SCREEN OVERLAY */
    .add-item-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #f5f5f5; /* exact screenshot background */
        z-index: 2000;
        display: none; /* hidden by default */
        overflow-y: auto;
    }

        /* Show Overlay */
        .add-item-overlay.show {
            display: block;
        }

    /* Page Wrapper (centered content like your UI) */
    .page-wrapper {
        max-width: 600px;
        margin: auto;
        padding: 24px 16px 40px;
        min-height: 100vh;
    }

    /* Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .page-title {
        font-size: 22px;
        font-weight: 700;
    }

    .close-btn {
        font-size: 26px;
        cursor: pointer;
        color: #888;
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 12px;
        padding: 14px;
        border: 1px solid #e6e6e6;
        font-size: 15px;
    }

    /* Category Pills */
    .category-options {
        display: flex;
        gap: 12px;
    }

    .category-pill {
        padding: 8px 18px;
        border-radius: 999px;
        border: none;
        background: #eaeaea;
        font-weight: 600;
        cursor: pointer;
    }

        .category-pill.active {
            background: #ff6b00;
            color: #fff;
        }

    /* Submit Button */
    .submit-btn {
        width: 100%;
        padding: 16px;
        border-radius: 14px;
        border: none;
        font-size: 17px;
        font-weight: 700;
        background: #ff6b00;
        color: #fff;
        margin-top: 30px;
    }
</style>


